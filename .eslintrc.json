{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "comma-dangle": 0,
    "class-methods-use-this": 0,
    "jsx-a11y/label-has-for": 0
  },
  "globals": {
    "it": true,
    "expect": true,
    "render": true,
    "shallow": true,
    "mount": true,
    "describe": true,
    "beforeEach": true,
    "beforeAll": true,
    "afterEach": true,
    "afterAll": true,
    "jest": true,
    "mountWithIntl": true,
    "shallowWithIntl": true
  }
}
